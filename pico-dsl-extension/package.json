{
  "name": "pico-dsl-example",
  "displayName": "Pico DSL VS Code Example",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:pico"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pico",
        "aliases": [
          "Pico"
        ],
        "extensions": [
          ".pico"
        ],
        "configuration": "./assets/pico-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pico",
        "scopeName": "source.pico",
        "path": "./assets/pico.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:package": "npx vsce package",
    "vscode:prepublish": "npm run package",
    "prepackage": "cd .. && cd pico-dsl-lsp && mvn package && cp target/pico-dsl-lsp*.jar ../pico-dsl-extension/assets/jars/pico-lsp.jar ",
    "compile": "npx webpack",
    "watch": "npx webpack --watch",
    "package": "npx webpack --mode production --devtool hidden-source-map",
    "lint": "npx eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.67.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "vsce": "^2.8.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@usethesource/rascal-vscode-dsl-lsp-server": "0.6.1",
    "cpx": "^1.5.0"
  }
}
